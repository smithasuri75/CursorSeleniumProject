<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="OrangeHRM Firefox Test Suite" verbose="2" parallel="methods" thread-count="2">
    
    <!-- Test Suite Configuration for Firefox Browser -->
    <parameter name="browser" value="firefox"/>
    <parameter name="headless" value="false"/>
    <parameter name="implicitWait" value="10"/>
    <parameter name="pageLoadTimeout" value="30"/>
    
    <!-- Test Groups -->
    <groups>
        <run>
            <include name="smoke"/>
            <include name="regression"/>
            <include name="login"/>
            <include name="dashboard"/>
            <include name="critical"/>
            <include name="functional"/>
        </run>
    </groups>
    
    <!-- Firefox Test Suite: All Tests -->
    <test name="Firefox Test Suite" description="All tests running in Firefox browser">
        <classes>
            <class name="com.qa.orangehrm.tests.LoginTest"/>
            <class name="com.qa.orangehrm.tests.DashboardTest"/>
        </classes>
    </test>
    
    <!-- Suite Configuration -->
    <listeners>
        <listener class-name="com.qa.orangehrm.listeners.ExtentReportListener"/>
        <listener class-name="com.qa.orangehrm.listeners.TestNGListener"/>
    </listeners>
    
</suite>
