<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="OrangeHRM Test Suite" verbose="2" parallel="methods" thread-count="2" data-provider-thread-count="2">
    
    <!-- Test Suite Configuration -->
    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="false"/>
    <parameter name="implicitWait" value="10"/>
    <parameter name="pageLoadTimeout" value="30"/>
    
    <!-- Test Groups -->
    <groups>
        <run>
            <include name="smoke"/>
            <include name="regression"/>
            <include name="login"/>
            <include name="dashboard"/>
            <include name="critical"/>
            <include name="functional"/>
        </run>
    </groups>
    
    <!-- Test Suite: Login Tests -->
    <test name="Login Test Suite" description="Test suite for OrangeHRM login functionality">
        <classes>
            <class name="com.qa.orangehrm.tests.LoginTest">
                <methods>
                    <include name="testSuccessfulLogin" groups="smoke,login,critical"/>
                    <include name="testLoginWithInvalidCredentials" groups="regression,login,functional"/>
                    <include name="testLoginPageElements" groups="regression,login,functional"/>
                    <include name="testLoginWithEmptyCredentials" groups="regression,login,functional"/>
                    <include name="testLogout" groups="smoke,login,critical"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Test Suite: Dashboard Tests -->
    <test name="Dashboard Test Suite" description="Test suite for OrangeHRM dashboard functionality">
        <classes>
            <class name="com.qa.orangehrm.tests.DashboardTest">
                <methods>
                    <include name="testDashboardElementsDisplayed" groups="smoke,dashboard,critical"/>
                    <include name="testDashboardNavigationMenus" groups="regression,dashboard,functional"/>
                    <include name="testDashboardPageTitleAndUrl" groups="regression,dashboard,functional"/>
                    <include name="testUserDropdown" groups="regression,dashboard,functional"/>
                    <include name="testDashboardRefresh" groups="regression,dashboard,functional"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Test Suite: All Tests -->
    <test name="Complete Test Suite" description="Complete test suite for OrangeHRM application">
        <classes>
            <class name="com.qa.orangehrm.tests.LoginTest"/>
            <class name="com.qa.orangehrm.tests.DashboardTest"/>
        </classes>
    </test>
    
    <!-- Test Suite: Smoke Tests Only -->
    <test name="Smoke Test Suite" description="Smoke tests for critical functionality">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="critical"/>
            </run>
        </groups>
        <classes>
            <class name="com.qa.orangehrm.tests.LoginTest"/>
            <class name="com.qa.orangehrm.tests.DashboardTest"/>
        </classes>
    </test>
    
    <!-- Test Suite: Regression Tests Only -->
    <test name="Regression Test Suite" description="Regression tests for comprehensive testing">
        <groups>
            <run>
                <include name="regression"/>
                <include name="functional"/>
            </run>
        </groups>
        <classes>
            <class name="com.qa.orangehrm.tests.LoginTest"/>
            <class name="com.qa.orangehrm.tests.DashboardTest"/>
        </classes>
    </test>
    
    <!-- Test Suite: Critical Tests Only -->
    <test name="Critical Test Suite" description="Critical tests for essential functionality">
        <groups>
            <run>
                <include name="critical"/>
            </run>
        </groups>
        <classes>
            <class name="com.qa.orangehrm.tests.LoginTest"/>
            <class name="com.qa.orangehrm.tests.DashboardTest"/>
        </classes>
    </test>
    
    <!-- Suite Configuration -->
    <listeners>
        <!-- ExtentReports listener -->
        <listener class-name="com.qa.orangehrm.listeners.ExtentReportListener"/>
        <!-- TestNG listener for custom reporting -->
        <listener class-name="com.qa.orangehrm.listeners.TestNGListener"/>
    </listeners>
    
    <!-- Suite Level Parameters -->
    <suite-files>
        <!-- Include other suite files if needed -->
    </suite-files>
    
</suite>
